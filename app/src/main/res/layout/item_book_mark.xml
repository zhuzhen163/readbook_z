<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/selector_category_bg"
	android:orientation="vertical">

	<LinearLayout
		android:paddingRight="@dimen/dimen20dp"
		android:paddingLeft="@dimen/dimen20dp"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:layout_weight="1"
			android:id="@+id/tv_item_bookmark"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:paddingTop="@dimen/dimen15dp"
			android:text="1.第一章 八十大寿"
			android:textColor="@color/text_33"
			android:textSize="@dimen/dimen13dp" />
		<TextView
			android:id="@+id/tv_time"
			android:textSize="@dimen/dimen11dp"
			android:textColor="@color/a2a9b2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			/>
	</LinearLayout>


	<TextView
		android:layout_marginTop="@dimen/dimen15dp"
		android:layout_marginBottom="@dimen/dimen10dp"
		android:layout_marginLeft="@dimen/dimen20dp"
		android:layout_marginRight="@dimen/dimen15dp"
		android:id="@+id/tv_bookMark_content"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:maxLines="2"
		android:ellipsize="end"
		android:textColor="@color/a2a9b2"
		android:layout_centerVertical="true"
		android:textSize="@dimen/dimen12dp" />
	
	
	<View
		android:paddingLeft="@dimen/dimen20dp"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/color_f1" />
</LinearLayout>