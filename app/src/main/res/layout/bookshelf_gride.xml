<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_item_book_grid"
        android:layout_marginBottom="@dimen/dimen12dp"
        android:layout_marginTop="@dimen/dimen12dp"
        android:layout_marginRight="@dimen/dimen15dp"
        android:layout_marginLeft="@dimen/dimen15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_bookImg_grid"
            android:layout_width="@dimen/dimen90dp"
            android:layout_height="@dimen/dimen120dp" />

        <TextView
            android:visibility="gone"
            android:layout_marginTop="@dimen/dimen8dp"
            android:id="@+id/tv_progress_grid"
            android:gravity="center"
            android:textSize="@dimen/dimen10dp"
            android:textColor="@color/white"
            android:text="完结"
            android:layout_width="@dimen/dimen30dp"
            android:layout_height="@dimen/dimen15dp"
            android:background="@drawable/text_bg_wanjie"/>

        <CheckBox
            android:visibility="gone"
            android:layout_marginBottom="@dimen/dimen10dp"
            android:layout_marginRight="@dimen/dimen10dp"
            android:layout_alignRight="@id/iv_bookImg_grid"
            android:layout_alignBottom="@id/iv_bookImg_grid"
            android:id="@+id/checkbox_grid"
            android:background="@drawable/checkbox_selector"
            android:checked="false"
            android:layout_width="@dimen/dimen18dp"
            android:layout_height="@dimen/dimen18dp"
            android:button="@null"/>

        <TextView
            android:id="@+id/tv_bookName_grid"
            android:layout_width="@dimen/dimen90dp"
            android:layout_height="wrap_content"
            android:text="刁民的崛起"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/text_33"
            android:textSize="@dimen/dimen13dp"
            android:layout_below="@id/iv_bookImg_grid"
            android:layout_marginTop="@dimen/dimen13dp"
            />
        <TextView
            android:id="@+id/tv_percent"
            android:layout_marginTop="@dimen/dimen10dp"
            android:textSize="@dimen/dimen11dp"
            android:textColor="@color/a2a9b2"
            android:layout_below="@id/tv_bookName_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未读过"
            />
    </RelativeLayout>

    <ImageView
        android:background="@drawable/icon_addbook"
        android:id="@+id/iv_add_grid"
        android:layout_marginBottom="@dimen/dimen12dp"
        android:layout_marginTop="@dimen/dimen12dp"
        android:layout_marginRight="@dimen/dimen15dp"
        android:layout_marginLeft="@dimen/dimen15dp"
        android:layout_width="@dimen/dimen90dp"
        android:layout_height="@dimen/dimen120dp" />
    
</LinearLayout>