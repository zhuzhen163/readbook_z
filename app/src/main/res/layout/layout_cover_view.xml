<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >

    <com.huajie.readbook.utils.ImageveiwUitls
        android:id="@+id/iv_cover_img"
        android:layout_marginTop="@dimen/dimen90dp"
        android:layout_width="@dimen/dimen180dp"
        android:layout_height="@dimen/dimen230dp"
        />

    <TextView
        android:textColor="@color/text_33"
        android:text="名称"
        android:textSize="@dimen/dimen15dp"
        android:layout_marginTop="@dimen/dimen15dp"
        android:id="@+id/tv_cover_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:text="作者"
        android:textColor="@color/text_33"
        android:textSize="@dimen/dimen12dp"
        android:layout_marginTop="@dimen/dimen5dp"
        android:id="@+id/tv_cover_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:gravity="bottom"
        android:layout_weight="1"
        android:textSize="@dimen/dimen12dp"
        android:textColor="@color/text_33"
        android:text="本书已授权明阅小说进行电子制作与发行"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginTop="@dimen/dimen8dp"
        android:textSize="@dimen/dimen12dp"
        android:textColor="@color/text_33"
        android:text="版权所有  侵权必究"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen60dp"
        />

</LinearLayout>