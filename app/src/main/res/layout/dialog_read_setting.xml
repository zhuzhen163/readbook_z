<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/read_setting_ll_menu"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dimen275dp"
              android:layout_alignParentBottom="true"
              android:background="@color/color_19"
              android:clickable="true"
              android:orientation="vertical"
>

    <LinearLayout
        android:layout_marginRight="@dimen/dimen20dp"
        android:layout_marginLeft="@dimen/dimen20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/a2a9b2"
            android:textSize="@dimen/dimen11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen20dp"
            android:text="字号"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/read_setting_tv_font_minus"
            style="@style/WY.Theme.TextAppearance.Read.BottomMenu"
            android:layout_width="@dimen/dimen90dp"
            android:layout_height="@dimen/dimen32dp"
            android:textColor="@color/selector_btn_read_setting"
            android:background="@drawable/shape_btn_read_setting_normal"
            android:gravity="center"
            android:text="A-"
            android:textSize="@dimen/dimen13dp"/>

        <TextView
            android:id="@+id/read_setting_tv_font"
            android:layout_width="@dimen/dimen30dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="15"
            android:textColor="@color/a2a9b2"
            android:textSize="@dimen/dimen13dp"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/read_setting_tv_font_plus"
            style="@style/WY.Theme.TextAppearance.Read.BottomMenu"
            android:layout_width="@dimen/dimen90dp"
            android:layout_height="@dimen/dimen32dp"
            android:textColor="@color/selector_btn_read_setting"
            android:background="@drawable/shape_btn_read_setting_normal"
            android:gravity="center"
            android:text="A+"
            android:textSize="@dimen/dimen13dp"/>

        <CheckBox
            android:id="@+id/read_setting_cb_font_default"
            style="@style/WY.Theme.TextAppearance.Read.BottomMenu"
            android:layout_width="@dimen/dimen65dp"
            android:layout_height="@dimen/dimen32dp"
            android:background="@drawable/selector_btn_read_setting"
            android:button="@null"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dimen15dp"
            android:text="默认"
            android:textColor="@color/selector_btn_read_setting"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="@dimen/dimen20dp"
        android:layout_marginLeft="@dimen/dimen20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/a2a9b2"
            android:textSize="@dimen/dimen11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen20dp"
            android:text="背景"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/read_setting_rv_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen30dp"
            android:layout_weight="1"
            android:scrollbars="none"/>
    </LinearLayout>

    <RadioGroup
        android:layout_marginRight="@dimen/dimen20dp"
        android:layout_marginLeft="@dimen/dimen20dp"
        android:id="@+id/read_setting_rg_page_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen20dp"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/a2a9b2"
            android:textSize="@dimen/dimen11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen20dp"
            android:text="翻页"/>

        <RadioButton
            android:id="@+id/read_setting_rb_simulation"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen32dp"
            android:layout_marginRight="@dimen/dimen13dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_read_setting"
            android:button="@null"
            android:gravity="center"
            android:text="仿真"
            android:textColor="@color/selector_btn_read_setting"
            android:textSize="@dimen/dimen12dp"/>

        <RadioButton
            android:id="@+id/read_setting_rb_cover"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen32dp"
            android:layout_marginRight="@dimen/dimen13dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_read_setting"
            android:textColor="@color/selector_btn_read_setting"
            android:button="@null"
            android:gravity="center"
            android:text="覆盖"
            android:textSize="@dimen/dimen12dp"/>

        <RadioButton
            android:id="@+id/read_setting_rb_slide"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen30dp"
            android:layout_marginRight="@dimen/dimen13dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_read_setting"
            android:textColor="@color/selector_btn_read_setting"
            android:button="@null"
            android:gravity="center"
            android:text="滑动"
            android:textSize="@dimen/dimen12dp"
            android:visibility="gone"/>

        <RadioButton
            android:id="@+id/read_setting_rb_scroll"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen32dp"
            android:layout_marginRight="@dimen/dimen13dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_read_setting"
            android:textColor="@color/selector_btn_read_setting"
            android:button="@null"
            android:gravity="center"
            android:text="平滑"
            android:textSize="@dimen/dimen12dp"/>

        <RadioButton
            android:id="@+id/read_setting_rb_none"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen32dp"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_read_setting"
            android:textColor="@color/selector_btn_read_setting"
            android:button="@null"
            android:gravity="center"
            android:text="无"
            android:textSize="@dimen/dimen12dp"/>
    </RadioGroup>

    <RadioGroup
        android:layout_marginRight="@dimen/dimen20dp"
        android:layout_marginLeft="@dimen/dimen20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen20dp"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/a2a9b2"
            android:textSize="@dimen/dimen11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen20dp"
            android:text="行距"/>

        <RadioButton
            android:id="@+id/rb_spacing_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen32dp"
            android:layout_marginRight="@dimen/dimen15dp"
            android:layout_weight="1"
            android:background="@drawable/ju3_btn_read_setting"
            android:button="@null"
            />

        <RadioButton
            android:id="@+id/rb_spacing_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen32dp"
            android:layout_marginRight="@dimen/dimen15dp"
            android:layout_weight="1"
            android:background="@drawable/ju2_btn_read_setting"
            android:button="@null"
            />

        <RadioButton
            android:id="@+id/rb_spacing_3"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen32dp"
            android:layout_weight="1"
            android:background="@drawable/ju1_btn_read_setting"
            android:button="@null"
            />
    </RadioGroup>

    <View
        android:layout_marginTop="@dimen/dimen20dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_4f"/>
    <TextView
        android:id="@+id/tv_setting"
        android:gravity="center"
        android:layout_weight="1"
        style="@style/WY.Theme.TextAppearance.Read.BottomMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="更多设置"/>

</LinearLayout>
