<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginLeft="@dimen/dimen20dp"
        android:layout_marginRight="@dimen/dimen20dp"
        android:layout_marginTop="@dimen/dimen12dp"
        android:layout_marginBottom="@dimen/dimen12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_bookImg"
            android:layout_width="@dimen/dimen60dp"
            android:layout_height="@dimen/dimen80dp"
            />
        <TextView
            android:id="@+id/tv_bookName"
            android:layout_marginLeft="@dimen/dimen15dp"
            android:layout_marginTop="@dimen/dimen5dp"
            android:layout_toRightOf="@id/iv_bookImg"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:text="总裁爹地宠上天"
            android:textColor="@color/text_33"
            android:textSize="@dimen/dimen14dp"
            />
        <TextView
            android:id="@+id/tv_readPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen13dp"
            android:textColor="@color/a2a9b2"
            android:layout_alignLeft="@id/tv_bookName"
            android:layout_below="@id/tv_bookName"
            android:layout_marginTop="@dimen/dimen10dp"
            android:text=""
            android:layout_marginRight="@dimen/dimen10dp"
            />

        <TextView
            android:id="@+id/tv_readTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/a2a9b2"
            android:textSize="@dimen/dimen12dp"
            android:layout_toRightOf="@id/iv_bookImg"
            android:layout_alignBottom="@id/iv_bookImg"
            android:layout_marginLeft="@dimen/dimen15dp"
            android:layout_marginBottom="@dimen/dimen5dp"
            android:text="贝小爱"
            />

        <TextView
            android:id="@+id/tv_openBook"
            android:gravity="center"
            android:text="打开"
            android:textColor="@color/colorTheme"
            android:textSize="@dimen/dimen12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dimen70dp"
            android:layout_height="@dimen/dimen27dp"
            android:background="@drawable/background_corners_read_history"/>

        <CheckBox
            android:id="@+id/checkbox_list"
            android:background="@drawable/checkbox_selector"
            android:checked="false"
            android:layout_marginRight="@dimen/dimen15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dimen18dp"
            android:layout_height="@dimen/dimen18dp"
            android:button="@null"/>

    </RelativeLayout>
</LinearLayout>