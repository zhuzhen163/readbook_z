<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="@dimen/dimen20dp"
        android:layout_marginTop="@dimen/dimen40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.huajie.readbook.utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择违规原因"
            android:textColor="@color/text_33"
            android:textSize="@dimen/dimen16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（必选）"
            android:textSize="@dimen/dimen12dp"
            android:textColor="#fa4e3c"/>
    </LinearLayout>
    <GridView
        android:layout_marginTop="@dimen/dimen10dp"
        android:id="@+id/gr_check"
        android:layout_marginRight="@dimen/dimen20dp"
        android:layout_marginLeft="@dimen/dimen20dp"
        android:numColumns="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </GridView>
    <com.huajie.readbook.utils.CustomTextView
        android:layout_marginTop="@dimen/dimen40dp"
        android:layout_marginLeft="@dimen/dimen20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="举报内容"
        android:textColor="@color/text_33"
        android:textSize="@dimen/dimen16dp"/>
    <RelativeLayout
        android:background="@drawable/background_corners_bg"
        android:layout_marginRight="@dimen/dimen20dp"
        android:layout_marginLeft="@dimen/dimen20dp"
        android:layout_marginTop="@dimen/dimen15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen100dp">
        <EditText
            android:id="@+id/et_input"
            android:gravity="start"
            android:hint="在此输入举报理由（选填）"
            android:textSize="@dimen/dimen13dp"
            android:padding="@dimen/dimen10dp"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"/>
        <TextView
            android:id="@+id/tv_textNum"
            android:text="(0/200字)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/a2a9b2"
            android:textSize="@dimen/dimen12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dimen10dp"
            android:layout_marginBottom="@dimen/dimen10dp"/>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/dimen10dp"
        android:layout_marginLeft="@dimen/dimen20dp"
        android:textColor="@color/a2a9b2"
        android:textSize="@dimen/dimen11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请认真对待您的举报行为，虚假举报将不被处理。"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_submit"
            android:background="@drawable/background_corners_search_null"
            android:gravity="center"
            android:textSize="@dimen/dimen15dp"
            android:text="提交举报"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dimen20dp"
            android:layout_marginRight="@dimen/dimen20dp"
            android:layout_height="@dimen/dimen45dp" />
    </LinearLayout>
</LinearLayout>