<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              >
    <LinearLayout
        android:paddingLeft="@dimen/dimen20dp"
        android:paddingRight="@dimen/dimen20dp"
        android:background="@drawable/background_pickview_dialog"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen300dp">
        <TextView
            android:textColor="@color/text_33"
            android:textSize="@dimen/dimen16dp"
            android:layout_marginTop="@dimen/dimen25dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐书籍给好友"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_wxFriend"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/icon_weixin"
                    android:layout_width="@dimen/dimen50dp"
                    android:layout_height="@dimen/dimen50dp" />
                <TextView
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:textSize="@dimen/dimen12dp"
                    android:textColor="@color/a2a9b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信好友"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_friendCircle"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/icon_pengyouquan"
                    android:layout_width="@dimen/dimen50dp"
                    android:layout_height="@dimen/dimen50dp" />
                <TextView
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:textSize="@dimen/dimen12dp"
                    android:textColor="@color/a2a9b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="朋友圈"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_qqFriend"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/icon_qqhaoyou"
                    android:layout_width="@dimen/dimen50dp"
                    android:layout_height="@dimen/dimen50dp" />
                <TextView
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:textSize="@dimen/dimen12dp"
                    android:textColor="@color/a2a9b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ好友"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_qqZone"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/icon_kongjian"
                    android:layout_width="@dimen/dimen50dp"
                    android:layout_height="@dimen/dimen50dp" />
                <TextView
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:textSize="@dimen/dimen12dp"
                    android:textColor="@color/a2a9b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ空间"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_weibo"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/icon_weibo"
                    android:layout_width="@dimen/dimen50dp"
                    android:layout_height="@dimen/dimen50dp" />
                <TextView
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:textSize="@dimen/dimen12dp"
                    android:textColor="@color/a2a9b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新浪微博"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_copy"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/icon_copy"
                    android:layout_width="@dimen/dimen50dp"
                    android:layout_height="@dimen/dimen50dp" />
                <TextView
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:textSize="@dimen/dimen12dp"
                    android:textColor="@color/a2a9b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="复制链接"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen1dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen1dp"
            android:background="@color/color_f1"/>
        <TextView
            android:id="@+id/tv_cancel"
            android:gravity="center"
            android:textColor="@color/text_33"
            android:text="取消"
            android:textSize="@dimen/dimen15dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen45dp" />
    </LinearLayout>
</LinearLayout>
