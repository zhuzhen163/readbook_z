<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginLeft="@dimen/dimen20dp"
        android:layout_marginRight="@dimen/dimen20dp"
        android:layout_marginTop="@dimen/dimen12dp"
        android:layout_marginBottom="@dimen/dimen12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_bookImg"
            android:layout_width="@dimen/dimen90dp"
            android:layout_height="@dimen/dimen120dp"
            />
        <TextView
            android:id="@+id/tv_bookName"
            android:layout_marginLeft="@dimen/dimen15dp"
            android:layout_marginTop="@dimen/dimen5dp"
            android:layout_toRightOf="@id/iv_bookImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/dimen50dp"
            android:textColor="@color/text_33"
            android:textSize="@dimen/dimen15dp"
            />
        <LinearLayout
            android:id="@+id/ll_score"
            android:layout_alignBottom="@id/tv_bookName"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_score"
                android:textSize="@dimen/dimen16dp"
                android:text="9.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/f77f1e"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@id/tv_bookName"
                android:textSize="@dimen/dimen10dp"
                android:text="分"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/f77f1e"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_book_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen13dp"
            android:textColor="@color/a2a9b2"
            android:layout_alignLeft="@id/tv_bookName"
            android:layout_below="@id/tv_bookName"
            android:layout_marginTop="@dimen/dimen15dp"
            android:maxLines="2"
            android:lineSpacingExtra="@dimen/dimen2dp"
            android:ellipsize="end"
            android:text="屌丝男刘志远遭遇网络情缘稀里糊涂和哈哈哈不知道这美女他这美女放大发范德萨发达"
            />

        <TextView
            android:id="@+id/tv_authorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/a2a9b2"
            android:textSize="@dimen/dimen12dp"
            android:layout_toRightOf="@id/iv_bookImg"
            android:layout_alignBottom="@id/iv_bookImg"
            android:layout_marginLeft="@dimen/dimen15dp"
            android:layout_marginBottom="@dimen/dimen5dp"
            android:text="贝小爱"
            />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/tv_authorName"
            android:id="@+id/tv_tag"
            android:padding="@dimen/dimen3dp"
            android:background="@drawable/background_corners_bg"
            android:textColor="@color/a2a9b2"
            android:textSize="@dimen/dimen10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen5dp"
            android:text="都市生活"/>
    </RelativeLayout>
</LinearLayout>