<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/selector_category_bg"
	android:orientation="vertical">
	
	<TextView
		android:id="@+id/category_tv_chapter"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:paddingTop="@dimen/dimen15dp"
		android:paddingBottom="@dimen/dimen15dp"
		android:paddingLeft="@dimen/dimen20dp"
		android:singleLine="true"
		android:textColor="@color/text_33"
		android:textSize="@dimen/dimen13dp" />
	
	
	<View
		android:paddingLeft="@dimen/dimen20dp"
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:background="@color/color_f1" />
</LinearLayout>