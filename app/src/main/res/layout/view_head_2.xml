<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="@dimen/dimen30dp"
        android:layout_marginRight="@dimen/dimen20dp"
        android:layout_marginLeft="@dimen/dimen20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.huajie.readbook.utils.CustomTextView
            android:id="@+id/tv_tab_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小编推荐"
            android:textSize="@dimen/dimen18dp"
            android:textColor="@color/black"
            />
        <ImageView
            android:layout_marginLeft="@dimen/dimen5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dimen15dp"
            android:layout_height="@dimen/dimen16dp"
            android:src="@drawable/icon_fire"/>
        <TextView
            android:id="@+id/tv_random_1"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换一换"
            android:drawablePadding="@dimen/dimen10dp"
            android:textColor="@color/colorTheme"
            android:drawableRight="@drawable/icon_huanyihuan"
            android:textSize="@dimen/dimen13dp"/>
        
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_book_1"
        android:layout_marginLeft="@dimen/dimen20dp"
        android:layout_marginRight="@dimen/dimen20dp"
        android:layout_marginTop="@dimen/dimen15dp"
        android:layout_marginBottom="@dimen/dimen20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_bookImg_1"
            android:layout_width="@dimen/dimen90dp"
            android:layout_height="@dimen/dimen120dp"
            />
        <TextView
            android:id="@+id/tv_bookName_1"
            android:layout_marginLeft="@dimen/dimen15dp"
            android:layout_marginTop="@dimen/dimen5dp"
            android:layout_toRightOf="@id/iv_bookImg_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总裁爹地宠上天"
            android:textColor="@color/text_33"
            android:textSize="@dimen/dimen15dp"
            />
        <LinearLayout
            android:layout_alignBottom="@id/tv_bookName_1"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_score_1"
                android:textSize="@dimen/dimen16dp"
                android:text="9.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/f77f1e"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@id/tv_bookName_1"
                android:textSize="@dimen/dimen10dp"
                android:text="分"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/f77f1e"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_book_content_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen13dp"
            android:textColor="@color/a2a9b2"
            android:layout_alignLeft="@id/tv_bookName_1"
            android:layout_below="@id/tv_bookName_1"
            android:layout_marginTop="@dimen/dimen15dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dimen2dp"
            android:text="屌丝男刘志远遭遇网络情缘稀里糊涂和哈哈哈不知道这美女他这美女放大发范德萨发达"
            />

        <TextView
            android:id="@+id/tv_authorName_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/a2a9b2"
            android:textSize="@dimen/dimen12dp"
            android:layout_toRightOf="@id/iv_bookImg_1"
            android:layout_alignBottom="@id/iv_bookImg_1"
            android:layout_marginLeft="@dimen/dimen15dp"
            android:layout_marginBottom="@dimen/dimen5dp"
            android:text="贝小爱"
            />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/tv_authorName_1"
            android:id="@+id/tv_tag_1"
            android:padding="@dimen/dimen3dp"
            android:background="@drawable/background_corners_bg"
            android:textColor="@color/a2a9b2"
            android:textSize="@dimen/dimen10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen5dp"
            android:text="都市生活"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/dimen20dp"
        android:layout_marginRight="@dimen/dimen20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_book_2"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_bookImg_2"
                android:layout_width="@dimen/dimen90dp"
                android:layout_height="@dimen/dimen120dp" />
            <TextView
                android:id="@+id/tv_bookName_2"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_width="@dimen/dimen90dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen13dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/dimen1dp"
                android:text="男神带着孩子找上门，妈咪..."
                android:textColor="@color/text_33"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_book_3"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen20dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_bookImg_3"
                android:layout_width="@dimen/dimen90dp"
                android:layout_height="@dimen/dimen120dp" />
            <TextView
                android:id="@+id/tv_bookName_3"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_width="@dimen/dimen90dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen13dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/dimen1dp"
                android:text="男神带着孩子找上门，妈咪..."
                android:textColor="@color/text_33"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_book_4"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen20dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/iv_bookImg_4"
                android:layout_width="@dimen/dimen90dp"
                android:layout_height="@dimen/dimen120dp" />
            <TextView
                android:id="@+id/tv_bookName_4"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_width="@dimen/dimen90dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen13dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/dimen1dp"
                android:text="男神带着孩子找上门，妈咪..."
                android:textColor="@color/text_33"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dimen20dp"
        android:layout_marginRight="@dimen/dimen20dp"
        android:layout_marginLeft="@dimen/dimen20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen40dp">
        <com.huajie.readbook.utils.CustomTextView
            android:id="@+id/tv_tab_2"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排行榜"
            android:textSize="@dimen/dimen18dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_more"
            android:textSize="@dimen/dimen13dp"
            android:textColor="@color/a2a9b2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/dimen10dp"
            android:drawableRight="@drawable/icon_more"
            android:text="更多"/>
    </LinearLayout>

    <com.huajie.readbook.widget.NoScrollGridView
        android:id="@+id/gv_position_2"
        android:layout_marginLeft="@dimen/dimen20dp"
        android:layout_marginRight="@dimen/dimen20dp"
        android:layout_marginTop= "@dimen/dimen6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="@dimen/dimen90dp"
        android:gravity="center"
        android:scrollbars="none"
        android:horizontalSpacing="@dimen/dimen30dp"
        android:numColumns="2"
        android:verticalSpacing="@dimen/dimen12dp"
        >
    </com.huajie.readbook.widget.NoScrollGridView>

</LinearLayout>