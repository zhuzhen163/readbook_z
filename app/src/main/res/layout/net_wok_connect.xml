<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:id="@+id/ll_network"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="@dimen/dimen100dp"
        android:src="@drawable/icon_nonet"
        android:layout_width="@dimen/dimen290dp"
        android:layout_height="@dimen/dimen228dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无网络"
        android:textColor="@color/text_33"
        android:layout_marginTop="@dimen/dimen3dp"
        android:textSize="@dimen/dimen16dp"/>

    <TextView
        android:background="@drawable/background_corners_search_null"
        android:id="@+id/tv_reConnected"
        android:gravity="center"
        android:textSize="@dimen/dimen12dp"
        android:textColor="@color/white"
        android:text="重新连接"
        android:layout_marginTop="@dimen/dimen20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/dimen110dp"
        android:layout_height="@dimen/dimen35dp" />
</LinearLayout>