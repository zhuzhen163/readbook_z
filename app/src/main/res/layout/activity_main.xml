<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.huajie.readbook.widget.NoScrollViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_click_hot"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hot_list"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f1" />

    <RadioGroup
        android:id="@+id/tabradios"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen60dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <RadioButton
            android:paddingBottom="@dimen/dimen8dp"
            android:paddingTop="@dimen/dimen8dp"
            android:id="@+id/rb_bookshelf"
            style="@style/radioButton"
            android:layout_weight="1"
            android:background="@color/white"
            android:checked="true"
            android:drawableTop="@drawable/rb_bookshelf"
            android:text="书架"
            android:textColor="@drawable/radiobutton_text"
            android:textSize="@dimen/dimen11dp" />

        <RadioButton
            android:paddingBottom="@dimen/dimen8dp"
            android:paddingTop="@dimen/dimen8dp"
            android:id="@+id/rb_find"
            style="@style/radioButton"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/rb_find"
            android:text="发现"
            android:textColor="@drawable/radiobutton_text"
            android:textSize="@dimen/dimen11dp" />

        <RadioButton
            android:paddingBottom="@dimen/dimen8dp"
            android:paddingTop="@dimen/dimen8dp"
            android:id="@+id/rb_bookCity"
            style="@style/radioButton"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/rb_bookcity"
            android:text="书城"
            android:textColor="@drawable/radiobutton_text"
            android:textSize="@dimen/dimen11dp" />

        <RadioButton
            android:paddingBottom="@dimen/dimen8dp"
            android:paddingTop="@dimen/dimen8dp"
            android:id="@+id/rb_welfare"
            style="@style/radioButton"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/rb_fuli"
            android:text="福利"
            android:textColor="@drawable/radiobutton_activity_text"
            android:textSize="@dimen/dimen11dp" />

        <RadioButton
            android:paddingBottom="@dimen/dimen8dp"
            android:paddingTop="@dimen/dimen8dp"
            android:id="@+id/rb_mine"
            style="@style/radioButton"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/rb_mine"
            android:text="我的"
            android:textColor="@drawable/radiobutton_text"
            android:textSize="@dimen/dimen11dp" />

    </RadioGroup>
</LinearLayout>